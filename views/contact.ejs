<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-success mt-2 mb-2">Tambah Data Contact</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% } %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data Contact Masih Kosong.
              </div>
            </td>
          </tr>
          <% } else { %>
          <% contacts.forEach((contact,i) => { i++ %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn badge rounded-pill text-bg-success"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
